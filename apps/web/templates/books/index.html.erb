<h2>All books</h2>

<% if books.any? %>
<div id="books">
  <% books.each do |book| %>
    <div class="book">
      <h3><%= book.title %></h3>
      <p>by <strong><%= book.author %></strong></p>
    </div>
  <% end %>
</div>
<% else %>
  <p class="placeholder">There no books yet.</p>
<% end %>
<a href="/books/new">New book</a>